{
  "id": "FA14595B-EF44-4A82-906D-33B8D20677FD",
  "name": "InstallWindowsService",
  "friendlyName": "Install Windows Service",
  "description": "Installs a traditional Windows Service",
  "helpMarkDown": "",
  "category": "Deploy",
  "visibility": [
    "Release",
    "Build"  
  ],
  "author": "WFM IRMA/ICON Team",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 12
  },
  "demands": [
  ],
  "minimumAgentVersion": "1.96.2",
  "groups": [
  ],
  "inputs": [
    {
      "name": "machineList",
      "type": "multiLine",
      "label": "Machines",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Provide a comma separated list of the machine(s) IP addresses or FQDNs. <br>For example, dbserver.fabrikam.com, dbserver_int.fabrikam.com, 192.168.12.34"
    },
    {
      "name": "AdminUserName",
      "type": "string",
      "label": "Admin Login",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Provide the administrator's login of the target machines."
    },
    {
      "name": "AdminPassword",
      "type": "string",
      "label": "Password",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Provide the administrator's password of the target machines. <br>The best practice is to create a variable in the Build or Release definition, and mark it as 'Secret' to secure it, and then use it here, like '$(adminPassword)'."
    },
    {
      "name": "BinaryPath",
      "type": "string",
      "label": "Service Install Path",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Full path to the service including its filename"
    },
    {
      "name": "ServiceName",
      "type": "string",
      "label": "Service Name",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": ""
    },   
    {
      "name": "DisplayName",
      "type": "string",
      "label": "Display Name",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": ""
    },
    {
      "name": "Description",
      "type": "multiLine",
      "label": "Description of Service",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": ""
    },
    {
      "name": "ServiceUsername",
      "type": "string",
      "label": "Service Username",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Username to run the service as."
    },
    {
      "name": "ServicePassword",
      "type": "string",
      "label": "Service Password",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Password for the service account"
    },
    {
      "name": "StartUpType",
      "type": "radio",
      "label": "Startup Type",
      "required": true,
      "defaultValue": "Automatic",
      "options": {
        "Automatic": "Automatic",
        "Manual": "Manual",
        "Disabled": "Disabled"
      }
    }
  ],
  "instanceNameFormat": "Install Service $(ServiceName)",
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\Main.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
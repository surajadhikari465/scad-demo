{
  "id": "C885A5AB-8E65-4A30-A917-6D4B98CC2EE4",
  "name": "SQLServerScriptRunner",
  "friendlyName": "SQL Server Script Runner",
  "description": "Execute a SQL Script on a specific SQL Server/Database",
  "helpMarkDown": "",
  "category": "Deploy",
  "visibility": [
    "Release",
    "Build"
  ],
  "author": "WFM IRMA/ICON Team (Port from Microsoft)",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 12
  },
  "demands": [
  ],
  "minimumAgentVersion": "1.96.2",
  "groups": [
    {
      "name": "deployment",
      "displayName": "Deployment",
      "isExpanded": true
    }
  ],
  "inputs": [
    {
      "name": "serverHost",
      "type": "string",
      "label": "Machine",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "The target machine"
    },
    {
      "name": "AdminUserName",
      "type": "string",
      "label": "Admin Login",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Provide the administrator's login of the target machine."
    },
    {
      "name": "AdminPassword",
      "type": "string",
      "label": "Password",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Provide the administrator's password of the target machine. <br>The best practice is to create a variable in the Build or Release definition, and mark it as 'Secret' to secure it, and then use it here, like '$(adminPassword)'."
    },
    {
      "name": "SQLServer",
      "type": "string",
      "label": "Server",
      "defaultValue": "",
      "required": true,
      "groupName": "deployment",
      "helpMarkDown": ""
    },
    {
      "name": "Database",
      "type": "string",
      "label": "Database",
      "defaultValue": "",
      "required": true,
      "groupName": "deployment",
      "helpMarkDown": ""
    },
    {
      "name": "ScriptFile",
      "type": "filePath",
      "label": "Script File",
      "required": true,
      "groupName": "deployment",
      "defaultValue": "",
      "helpMarkDown": "Location of the SQL Script to run"
    },
    {
      "name": "Timeout",
      "type": "string",
      "label": "Timeout",
      "required": true,
      "groupName": "deployment",
      "defaultValue": "30",
      "helpMarkDown": "Length of time in whole seconds to allow the script to run before failing"
    },
    {
      "name": "WindowsAuthentication",
      "type": "boolean",
      "label": "Windows Authentication",
      "required": true,
      "defaultValue": "true",
      "groupName": "deployment",
      "helpMarkDown": "Use the credentials of the Build Server to connect to the SQL Server"
    },
    {
      "name": "Login",
      "type": "string",
      "label": "SQL Login",
      "defaultValue": "",
      "required": false,
      "groupName": "deployment",
      "visibleRule": "WindowsAuthentication = false",
      "helpMarkDown": "Login for the sql server"
    },
    {
      "name": "Password",
      "type": "string",
      "label": "SQL Password",
      "defaultValue": "",
      "required": false,
      "groupName": "deployment",
      "visibleRule": "WindowsAuthentication = false",
      "helpMarkDown": "Password for the sql server"
    }
  ],
  "instanceNameFormat": "Execute SQL Script $(ScriptFile) on $(SQLServer) - $(Database)",
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\Main.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets async="true">
    <!-- Note that a stacktrace at this point would be equvalent to the stack trace provided in an exception -->
    <!--<target name="NLogEventLog" xsi:type="EventLog" source="OutOfStock" eventId="1000"
        layout="${message}" />-->
    <target name="console" xsi:type="Console" layout="${message}"/>
    <target name="file" xsi:type="File" fileName="${basedir}/Logs/OutOfStock.log"
        layout="${message}"
        archiveFileName="${basedir}/Logs/Archive/OutOfStock.{####}.log"
        ArchiveEvery="Month"
        archiveNumbering="Sequence" />
    <target name="error" xsi:type="File" fileName="${basedir}/Logs/Error.log"
        layout="${message}"
        archiveFileName="${basedir}/Logs/Archive/Error.{####}.log"
        ArchiveEvery="Month"
        archiveNumbering="Sequence" />
    />
    <target name="json-file" xsi:type="File" fileName="application-logs.json" archiveAboveSize="20971520" maxArchiveFiles="3">
      <layout xsi:type="JsonLayout">
        <attribute name="date" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}" />
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=ToString}" />
      </layout>
    </target>
  </targets>
  <rules>
    <logger name="*" levels="Fatal,Error,Warn" writeTo="error" />
    <logger name="*" minlevel="Debug" writeTo="console,json-file,file" />
    
  </rules>
</nlog>
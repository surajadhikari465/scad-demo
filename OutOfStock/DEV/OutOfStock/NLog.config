<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets  async="true">
    <!-- Note that a stacktrace at this point would be equvalent to the stack trace provided in an exception -->
    <target name="NLogEventLog" xsi:type="EventLog" source="OutOfStock" eventId="1000"
        layout="${message}" />
    <target name="file" xsi:type="File" fileName="${basedir}/App_Data/Logs/OutOfStock.log"
        layout="${message}"
        archiveFileName="${basedir}/App_Data/Logs/OutOfStock.{####}.log"
        ArchiveEvery="Month"
        archiveNumbering="Sequence" />
    <target name="console" xsi:type="ColoredConsole"
        layout="${message}"/>
    <target name="error" xsi:type="File" fileName="${basedir}/App_Data/Logs/Error.log"
        layout="${message}" />
    <target name="json-file" xsi:type="File" fileName="${basedir}/App_Data/Logs/application-logs.json"
            archiveAboveSize="51200000"
            maxArchiveFiles="3">
      <layout xsi:type="JsonLayout">
        <attribute name="date" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}" />
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=ToString}" />
      </layout>
    </target>    
  </targets>
  <rules>
    <logger name="*" levels="Fatal,Error,Warn" writeTo="NLogEventLog" />
    <logger name="*" levels="Fatal,Error,Warn,Info,Debug,Trace" writeTo="file,json-file,console" />
  </rules>
</nlog>
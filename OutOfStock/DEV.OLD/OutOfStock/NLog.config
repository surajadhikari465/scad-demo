<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <!-- Note that a stacktrace at this point would be equvalent to the stack trace provided in an exception -->
    <target name="NLogEventLog" xsi:type="EventLog" source="OutOfStock" eventId="1000"
        layout="${message}" />
    <target name="file" xsi:type="File" fileName="${basedir}/App_Data/Logs/OutOfStock.log"
        layout="${message}"
        archiveFileName="${basedir}/App_Data/Logs/OutOfStock.{####}.log"
        ArchiveEvery="Month"
        archiveNumbering="Sequence" />
    <target name="console" xsi:type="ColoredConsole"
        layout="${message}"/>
    <target name="error" xsi:type="File" fileName="${basedir}/App_Data/Logs/Error.log"
        layout="${message}" />

    <target name="database" type="Database" connectionStringName="Logging" dbProvider="mssql">
      <commandText>
        insert into LogTable(timestamp,level,logger,message,Application,Server) values (@time_stamp, @level, @logger, @message, 'OOS','CEWD7006');
      </commandText>
      <parameter name="@time_stamp" layout="${date}" />
      <parameter name="@level" layout="${level}" />
      <parameter name="@logger" layout="${logger}" />
      <parameter name="@message" layout="${message}" />
    </target>
    
  </targets>
  <rules>
    <logger name="*" levels="Fatal,Error,Warn" writeTo="NLogEventLog,error" />
    <logger name="*" levels="Fatal,Error,Warn,Info,Debug,Trace" writeTo="file" />
    <logger name="*" levels="Fatal,Error,Warn,Info,Debug,Trace" writeTo="console" />
    <logger name="*" levels="Fatal,Error,Warn,Info,Debug,Trace" writeTo="database" />
  </rules>
</nlog>
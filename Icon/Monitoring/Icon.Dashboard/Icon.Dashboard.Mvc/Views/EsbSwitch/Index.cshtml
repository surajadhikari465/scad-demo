@model IEnumerable<Icon.Dashboard.Mvc.ViewModels.EsbEnvironmentViewModel>
@using Icon.Dashboard.Mvc.Infrastructure

<p></p>
<div class="container-wide">

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        Current Active ESB Environment
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-offset-4 col-xs-3">
                            @using (Ajax.BeginForm("GetCurrentEsbEnvironment",
                                "EsbSwitch",
                                new AjaxOptions
                                {
                                    HttpMethod = "GET",
                                    InsertionMode = InsertionMode.Replace,
                                    UpdateTargetId = $"currentEsbEnvironmentDiv",
                                    OnBegin = "getEsbEnvironmentBegin",
                                    OnSuccess = "getEsbEnvironmentSuccess",
                                    OnFailure = "getEsbEnvironmentFailure"
                                }))
                            {
                                <button id="btnGetCurrentEsbEnvironment" type="submit" class="btn btn-info btn-secondary btn-block">
                                    <span id="spinSpan" class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> Refresh
                                </button>
                            }             
                        </div>
                        <div id="currentEsbEnvironmentDiv" class="col-xs-2">
                            <h4>...</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p></p>

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        Set Active ESB Environment
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10">
                            <div class="btn-group btn-group-lg btn-group-justified">
                                @foreach (var esbEnvironment in Model)
                                {
                                    Html.RenderPartial("_SetEsbEnvironmentPartial", esbEnvironment);
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p></p>

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        View ESB Environment Definitions
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @foreach (var esbEnvironment in Model)
                        {
                            <div class="row">
                                <div class="col-xs-offset-1 col-xs-10 text-center">
                                    <h3>
                                        @Html.ActionLink(@esbEnvironment.Name, "Details", "EsbSwitch", new { name = esbEnvironment.Name }, null)
                                    </h3>
                                </div>
                            </div>
                        }
                        <div class="row margin-top-20">
                            <div class="col-xs-offset-1 col-xs-10 text-center">
                                @Html.ActionLink(
                                    "Add New ESB Environment Definition",
                                    "Create",
                                    "EsbSwitch",
                                    null,
                                    new { @class = $"btn btn-warning btn-block" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="message" class="col-sm-offset-2 col-sm-8 text-center">
            
        </div>
    </div>
</div>

@section scripts {
<script src="~/Scripts/esbSwitch.js"></script>
}

@model Icon.Dashboard.Mvc.ViewModels.PendingMessagesViewModel

@{
    var globalViewData = ViewBag.GlobalViewData as Icon.Dashboard.Mvc.ViewModels.GlobalViewData;
    ViewBag.Title = "Pending API Controller Messages";
}

<div class="container-wide">
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h2 class="panel-title">
                <a data-toggle="collapse" href="#collapsible">@ViewBag.Title</a>
            </h2>
        </div>
        <div id="collapsible" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
                        <table class="table table-bordered table-condensed no-bottom-margin">
                            <tr>
                                <th class="text-center">Controller</th>
                                <th class="text-center"># Messages Queued</th>
                            </tr>
                            @foreach (var entry in Model.PendingMessagesCountByType)
                            {
                                <tr>
                                    <td class="text-center">@Html.Label(entry.Key.ToString())</td>
                                    <td class="text-center">@Html.Label(entry.Value.ToString())</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


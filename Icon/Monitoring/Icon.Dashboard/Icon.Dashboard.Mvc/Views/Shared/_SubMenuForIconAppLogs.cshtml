@model IDictionary<Icon.Dashboard.Mvc.ViewModels.IconLoggedAppViewModel, bool>

@if (Model != null)
{
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Icon Log Viewer
        </a>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" href="@Url.Action("Index", "IconLogs", new { appName = "" })">
                    All
                </a>
            </li>

            @foreach (var appTypeEntry in Model)
            {
                var logPage = Url.Action("Index", "IconLogs", new { appName = appTypeEntry.Key.AppName });
                <li class="@(appTypeEntry.Value ? "active" : String.Empty)">
                    <a class="dropdown-item" href="@logPage">
                        @appTypeEntry.Key.AppName
                    </a>
                </li>
            }
        </ul>
    </li>
}
else
{
    <li>
        <a href="@Url.Action("Index", "IconLogs")">Icon Log Viewer</a>
    </li>
}
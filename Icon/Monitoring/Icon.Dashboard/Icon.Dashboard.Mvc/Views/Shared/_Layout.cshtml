@{ 
    var globalViewData = ViewBag.GlobalViewData as Icon.Dashboard.Mvc.ViewModels.GlobalViewData;
}

<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns= "http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" type="image/ico" href="~/Content/Images/favicon.ico">
    <title>@globalViewData.ViewTitle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetimepicker")
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand pull left" href="@Url.Action(Icon.Dashboard.Mvc.Models.Constants.MvcNames.HomeIndexActionName, Icon.Dashboard.Mvc.Models.Constants.MvcNames.HomeControllerName)">Icon Dashboard @globalViewData.ActiveEnvironmentName</a>
            </div>
            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action(Icon.Dashboard.Mvc.Models.Constants.MvcNames.HomeIndexActionName, Icon.Dashboard.Mvc.Models.Constants.MvcNames.HomeControllerName)">Home</a>
                </li>

                @{Html.RenderPartial("_StandardSubMenu", globalViewData.SubMenuForIconLogs);}

                @{Html.RenderPartial("_StandardSubMenu", globalViewData.SubMenuForMammothLogs);}

                @{Html.RenderPartial("_StandardSubMenu", globalViewData.SubMenuForIconApiJobs); } 

                <li>
                    <a href="@Url.Action(Icon.Dashboard.Mvc.Models.Constants.MvcNames.EsbControllerIndexActionName, Icon.Dashboard.Mvc.Models.Constants.MvcNames.EsbControllerName)">ESB Connections</a>
                </li>

                @{Html.RenderPartial("_SupportAppsPartial", globalViewData.SubMenuForSupportApps);}

                @{Html.RenderPartial("_StandardSubMenu", globalViewData.SubMenuForEnvironments);}
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <p></p>
    <footer id="footer">
        <p>&copy; @DateTime.Now.Year Whole Foods Market IP. L.P.</p>
    </footer>

</body>
</html>

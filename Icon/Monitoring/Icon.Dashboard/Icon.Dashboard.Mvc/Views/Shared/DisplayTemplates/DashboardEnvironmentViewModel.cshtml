@model Icon.Dashboard.Mvc.ViewModels.DashboardEnvironmentViewModel

<div class="row">

    <div class="form-group col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title text-center">
                    <a data-toggle="collapse" href="#collapsibleEsbEnvironment@(Model.Name)">
                        @(ViewBag.Title ?? Model.Name + " Dashboard Environment Details")
                    </a>
                </h4>
            </div>
            <div id="collapsibleEsbEnvironment@(Model.Name)" class="panel-collapse collapse in">
                <div class="panel-body">

                    <div class="form-group col-xs-12 col-sm-6 col-lg-4">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                 

                    <div class="form-group col-xs-12">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" href="#collapsibleApplications@(Model.Name)">@Html.DisplayNameFor(model => model.AppServers)</a>
                                </h4>
                            </div>
                            <div id="collapsibleApplications@(Model.Name)" class="panel-collapse collapse in">
                                <div class="panel-body">
                                    @if (Model.AppServers != null)
                                    {
                                        foreach (var appServer in Model.AppServers)
                                        {
                                            @Html.DisplayFor(model => appServer, "AppServerViewModel")
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
</div>












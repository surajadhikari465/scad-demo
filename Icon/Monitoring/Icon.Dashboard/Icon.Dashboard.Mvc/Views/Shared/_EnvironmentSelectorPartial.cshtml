<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        Environment
    </a>
    <ul class="dropdown-menu">
        @foreach (var environmentEnum in Enum.GetValues(typeof(Icon.Dashboard.Mvc.Models.EnvironmentEnum)).Cast<Icon.Dashboard.Mvc.Models.EnvironmentEnum>())
        {
            if (environmentEnum != Icon.Dashboard.Mvc.Models.EnvironmentEnum.Undefined)
            {
        <li class="btn-link">
            <a class="dropdown-item" href="@Url.Action("Index", "Home", new { environment = environmentEnum.ToString() })"><span class="text-@Icon.Dashboard.Mvc.Helpers.Utils.GetBootstrapClassForEnvironment(environmentEnum.ToString())">@environmentEnum.ToString()</span></a>
        </li>
            }
        }
        <li class="btn-link btn-success"><a class="dropdown-item" href="@Url.Action("Custom", "Home")"><span class="text-success">Define Custom</span></a></li>
    </ul>

</li>
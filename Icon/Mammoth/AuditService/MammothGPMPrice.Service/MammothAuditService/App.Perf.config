<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <section name="Audits" type="Audit.AuditConfigSection, MammothAudit"/>
    <section name="Upload" type="Audit.UploadConfigSection, MammothAudit"/>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>

  <Audits>
    <add name="GPMPrice" proc="dbo.AuditGPMPrice" excludeRegions="" isActive="true" fileName="Mammoth_Price_{Region}_{Date}.txt" delimiter="|" intervalMinutes="0" isGlobal="false" groupSize="250000" profileName="s3" xdt:Transform="Replace" xdt:Locator="Match(name)"  />
    <add name="ItemLocale" proc="dbo.AuditItemLocale" excludeRegions="" isActive="true" fileName="Mammoth_ItemLocale_{Region}_{Date}.txt" delimiter="|" intervalMinutes="0" isGlobal="false"  groupSize="250000" profileName="s3"  xdt:Transform="Replace" xdt:Locator="Match(name)" />
    <add name="GlobalItem" proc="dbo.AuditGlobalItem" isActive="true" fileName="Mammoth_Item_{Date}.txt" delimiter="|" intervalMinutes="0" isGlobal="true" groupSize="250000" profileName="s3"  xdt:Transform="Replace" xdt:Locator="Match(name)"/>
  </Audits>
  
  <Upload>
    <add profileName="s3" isS3Bucket="true" accessKey="{S3.accessKey}" secretKey="{S3.secretKey}" bucketRegion="https://s3.us-east-1.amazonaws.com" bucketName="14447-gpm-dev" destinationDir="Mammoth/Perf" xdt:Transform="Replace" xdt:Locator="Match(profileName)" />
  </Upload>

  <connectionStrings>
    <add name="Mammoth" connectionString="data source=QA-01-MAMMOTH02\MAMMOTH02;initial catalog=Mammoth;integrated security=True;MultipleActiveResultSets=True" xdt:Transform="Replace" xdt:Locator="Match(name)" />
  </connectionStrings>

  <appSettings>
    <add key="ScheduledTimeStart" value="3:30" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="ScheduledTimeEnd" value="5:00" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="TempDir" value="E:\\Temp\\s3Files\\Perf" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
  </appSettings>

  <nlog autoReload="true" throwExceptions="false" internalLogLevel="Off" internalLogFile="c:\Temp\nlog-internal.log">
    <targets xdt:Transform="Replace">
      <target name="dbLogMammoth"
              type="Database"
              connectionString="Data Source=QA-01-MAMMOTH02\MAMMOTH02;Initial Catalog=Mammoth;Integrated Security=SSPI"
              commandText="INSERT INTO app.AppLog(AppId, Level, Logger, UserName, MachineName, LogDate, Thread, Message, CallSite, Exception, StackTrace) VALUES (@AppId, @Level, @Logger, @UserName, @MachineName, @LogDate, @Thread, @Message, @CallSite, @Exception, @StackTrace);">
        <parameter name="@AppId" layout="25" />
        <parameter name="@Level" layout="${level}" />
        <parameter name="@Logger" layout="${logger}" />
        <parameter name="@UserName" layout="${windows-identity}" />
        <parameter name="@MachineName" layout="${machinename}" />
        <parameter name="@LogDate" layout="${date}" />
        <parameter name="@Thread" layout="${threadid}" />
        <parameter name="@Message" layout="${message}" />
        <parameter name="@CallSite" layout="${callsite}" />
        <parameter name="@Exception" layout="${exception:format=tostring}" />
        <parameter name="@StackTrace" layout="${stacktrace}" />
      </target>
    </targets>
    <rules>
      <logger name="*" minlevel="Info" writeTo="dbLogMammoth" final="true" />
    </rules>
  </nlog>
</configuration>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <connectionStrings>
    <add name="Mammoth" connectionString="data source=mammoth-db01-tst01;initial catalog=Mammoth;integrated security=True;MultipleActiveResultSets=True" xdt:Transform="Replace" xdt:Locator="Match(name)" />
  </connectionStrings>
  <appSettings>
    <add key="ServerUrl" value="ssl://TST-ESB-EMS-1.wfm.pvt:17293,ssl://TST-ESB-EMS-2.wfm.pvt:17293" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="TargetHostName" value="TST-ESB-EMS-1.wfm.pvt" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="Sender" value="Mammoth-Test1@wholefoods.com" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="SendEmails" value="false" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="Recipients" value="irma.developers@wholefoods.com" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="JmsPassword" value="J40L5dsM7DQr" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
  	<add key="JndiPassword" value="maMmothU$er" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="CertificateName" value="E=uday.bhaskar@wholefoods.com, CN=Uday Bhaskar, OU=InfraESBAdmins@wholefoods.com, O=Whole Foods Market, L=&quot;Austin &quot;, S=TX, C=US" xdt:Transform="Replace" xdt:Locator="Match(key)" />
  </appSettings>
  <nlog>
    <targets xdt:Transform="Replace">
        <target
              name="dbLogMammoth"
              type="Database"
              connectionString="Data Source=mammoth-db01-tst01;Initial Catalog=Mammoth;Integrated Security=SSPI"
              commandText="INSERT INTO app.AppLog(AppId, Level, Logger, UserName, MachineName, LogDate, Thread, Message, CallSite, Exception, StackTrace) VALUES (@AppId, @Level, @Logger, @UserName, @MachineName, @LogDate, @Thread, @Message, @CallSite, @Exception, @StackTrace);">
            <parameter name="@AppId" layout="6" />
            <parameter name="@Level" layout="${level}" />
            <parameter name="@Logger" layout="${logger}" />
            <parameter name="@UserName" layout="${windows-identity}" />
            <parameter name="@MachineName" layout="${machinename}" />
            <parameter name="@LogDate" layout="${date}" />
            <parameter name="@Thread" layout="${threadid}" />
            <parameter name="@Message" layout="${message}" />
            <parameter name="@CallSite" layout="${callsite}" />
            <parameter name="@Exception" layout="${exception:format=tostring}" />
            <parameter name="@StackTrace" layout="${stacktrace}" />
        </target>
        <target name="json-file" type="File" fileName="application-logs.json" archiveAboveSize="20971520" maxArchiveFiles="3">
            <layout type="JsonLayout">
                <attribute name="date" layout="${longdate}" />
                <attribute name="level" layout="${level:upperCase=true}" />
                <attribute name="message" layout="${message}" />
                <attribute name="exception" layout="${exception:format=ToString}" />
            </layout>
        </target>
    </targets>
    <rules xdt:Transform="Replace">
        <logger name="*" minlevel="Info" writeTo="dbLogMammoth, json-file" final="true" />
    </rules>
  </nlog>
</configuration>
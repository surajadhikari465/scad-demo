@model WebSupport.DataAccess.Models.JobSchedule

@{
    ViewBag.Title = "Create a New Job Schedule";
}
<h3 class="text-center">@ViewBag.Title</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @* use the shared editor template for the fields in the model *@
        @Html.EditorForModel()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
<script type="text/javascript">
$(document).ready(function () {
    @* must init bootstrap/moment.js datetimepicker*@
    $('#StartDateTime').datetimepicker({

        format: '@WebSupport.Models.ValidationConstants.JavascriptDateTimePickerFormat'
    });
    @* must enable bootstrap tooltips in js *@
    $('[data-toggle="tooltip"]').tooltip();
});
</script>
}

@model Icon.Web.Mvc.Models.PluCategoryViewModel

@{
    ViewBag.Title = "Add New PLU Range";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("_HeaderPartial", "PLU Range Management");}

@using (Html.BeginForm("Create", "PLUCategory", FormMethod.Post, new { @class = "begin-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.PluCategoryId)

    <fieldset>
        <legend>Add New PLU Range</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.PluCategoryName, new { @class = "form-label" })
                <div>
                    @Html.TextBoxFor(model => model.PluCategoryName, new { @class = "form-control form-input" })
                    @Html.ValidationMessageFor(model => model.PluCategoryName, null, new { @class = "form-property-val" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BeginRange, new { @class = "form-label" })
                <div>
                    @Html.TextBoxFor(model => model.BeginRange, new { @class = "form-control form-input" })
                    @Html.ValidationMessageFor(model => model.BeginRange, null, new { @class = " form-property-val" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EndRange, new { @class = "form-label" })
                <div>
                    @Html.TextBoxFor(model => model.EndRange, new { @class = "form-control form-input" })
                    @Html.ValidationMessageFor(model => model.EndRange, null, new { @class = "col-md-4 form-property-val" })
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Create" class="btn btn-light form-submit" />
                </div>
            </div>
        

    </fieldset>
}

<div class="page-subsection">
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>@ViewData["SuccessMessage"].ToString()</strong>
        </div>
    }

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>@ViewData["ErrorMessage"].ToString()</strong>
        </div>
    }
</div>

<div class="page-subsection">
    @Html.ActionLink("Return To PLU Ranges", "Index")
</div>

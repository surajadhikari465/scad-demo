@model Icon.Web.Mvc.Models.ManufacturerViewModel

@{
  /**/

  ViewBag.Title = "New Manufacturer";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("_HeaderPartial", "Manufacturer Management");}

<div class="page-section">
  @using(Html.BeginForm("Create", "Manufacturer", FormMethod.Post, new { @class = "begin-form" }))
  {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add New Manufacturer</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.ManufacturerName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ManufacturerName, new { @class = "form-control form-input", @id = "manufacturerName" })
            @Html.ValidationMessageFor(model => model.ManufacturerName, null, new { @class = "form-property-val" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ZipCode, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control form-input", @id = "zipCode" })
            @Html.ValidationMessageFor(model => model.ZipCode, null, new { @class = "form-property-val" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ArCustomerId, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ArCustomerId, new { @class = "form-control form-input", @id = "arCustomerId" })
        </div>
    </fieldset>

    <div class="form-group">
        <input type="submit" id="createButton" value="Create" class="btn btn-light form-submit" />
    </div>

    <div class="validation-section page-subsection">
      @if(ViewData["SuccessMessage"] != null)
      {
        <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>@ViewData["SuccessMessage"].ToString()</strong>
        </div>
      }
      @if(ViewData["ErrorMessage"] != null)
      {
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>@ViewData["ErrorMessage"].ToString()</strong>
        </div>
      }
    </div>
  }
</div>

<div class="form-footer">@Html.ActionLink("Back to Manufacturers", "Index")</div>

<div id="divBlock" class="block" style="display: none;">
    <div class="block-message">
        <img src="\Content\Infragistics\css\structure\images\igLoadingSmall.gif" style="max-width: 35px; max-height: 35px; margin: 25px 0 0 10px;" />
        <label class="block-label">Please wait... <br /> &nbsp Processing request...</label>
    </div>
</div>

@section scripts
{
  @Scripts.Render("~/Scripts/Manufacturer/manufacturer-create.js")
  @Scripts.Render("~/Scripts/jquery-disable.js")
}

@model Icon.Web.Mvc.Models.PluRequestEditViewModel


@using (Html.BeginForm("Edit", "PluRequest", FormMethod.Post, new { @class = "begin-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit PLU Request</legend>

        @Html.HiddenFor(model => Model.PluRequestId)
        @Html.HiddenFor(model => Model.NationalPLU)
        @Html.HiddenFor(model => Model.MerchandiseHierarchyClassId)

        <div class="form-group">
            @Html.LabelFor(model => Model.BrandName, new { @class = "form-label" })
            @Html.TextBoxFor(model => Model.BrandName, new { @class = "form-control form-input .ui-autocomplete", data_icon_autocomplete = @Url.Action("BrandAutocomplete") })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.ProductDescription, new { @class = "form-label" })
            @Html.TextBoxFor(model => Model.ProductDescription, new { @class = "form-control form-input" })
            @Html.ValidationMessageFor(model => Model.ProductDescription, null, new { @class = "form-property-val" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.PosDescription, new { @class = "form-label" })
            @Html.TextBoxFor(model => Model.PosDescription, new { @class = "form-control form-input" })
            @Html.ValidationMessageFor(model => Model.PosDescription, null, new { @class = "form-property-val" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.PackageUnit, new { @class = "form-label" })
            @Html.TextBoxFor(model => Model.PackageUnit, new { @class = "form-control form-input" })
            @Html.ValidationMessageFor(model => Model.PackageUnit, null, new { @class = "form-property-val" })       
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.RetailSize, new { @class = "form-label" })
            @Html.TextBoxFor(model => Model.RetailSize, new { @class = "form-control form-input" })
            @Html.ValidationMessageFor(model => Model.RetailSize, null, new { @class = "form-property-val" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.RetailUom, new { @class = "form-label" })
            @Html.DropDownListFor(model => Model.RetailUom, Model.RetailUoms, null, new { @class = "form-control form-input" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.SubTeamName, new { @class = "form-label" })
            @Html.DropDownListFor(model => Model.FinancialHierarchyClassId, Model.FinanacialHierarchyClasses, "", new { @class = "form-control form-input" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.NationalHierarchyName, new { @class = "form-label" })
            @Html.DropDownListFor(model => Model.NationalHierarchyClassId, Model.NationalHierarchyClasses, "", new { @class = "form-control form-input" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.Note, new { @class = "form-label" })
            @Html.TextBoxFor(model => Model.Note, new { @class = "form-control form-input" })
            @Html.ValidationMessageFor(model => Model.Note, null, new { @class = "form-property-val" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.RequestStatus, new { @class = "form-label" })
            @Html.DropDownListFor(model => Model.RequestStatus, Model.Status, null, new { @class = "form-control form-input" })
        </div>    
    </fieldset>

    <div class="form-inline">
        <div class="col-md-offset-3">
            <div class="form-group">
                @using (Html.BeginForm("Edit", "PluRequest", FormMethod.Post))
                {
                    <input type="submit" value="Save Changes" id="updateButton" class="btn btn-light" onclick="updateButtonClick()" />
                }
            </div>            
        </div>
    </div>

    <div class="validation-section page-subsection">
        @if (ViewData["UpdateSuccess"] != null)
        {
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>@ViewData["UpdateSuccess"].ToString()</strong>
        </div>
        }

        @if (ViewData["UpdateFailed"] != null)
        {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>@ViewData["UpdateFailed"].ToString()</strong>
        </div>
        }
    </div>
}

<div class="page-section">
    @Html.ActionLink("Back to Search", "Index") | @Html.ActionLink("Reload PLU Request Information", "Edit/" + Model.PluRequestId)
</div>

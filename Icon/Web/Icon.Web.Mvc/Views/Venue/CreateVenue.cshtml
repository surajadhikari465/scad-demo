@model Icon.Web.Mvc.Models.VenueViewModel

@{
    ViewBag.Title = "New Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/themes/base/all.css")

@{Html.RenderPartial("_HeaderPartial", "Create Venue");}

<div class="page-section">
    @using (Html.BeginForm("CreateVenue", "Venue", FormMethod.Post, new { @class = "begin-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ParentLocaleId)
        @Html.HiddenFor(model => model.ParentLocaleName)
        @Html.HiddenFor(model => model.LocaleTypeId)
        @Html.HiddenFor(model => model.OwnerOrgPartyId)

        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.ParentLocaleName, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ParentLocaleName, new { @disabled = "disabled", @class = "form-control form-input" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LocaleName, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.LocaleName, new { @class = "form-control form-input" })
                @Html.ValidationMessageFor(model => model.LocaleName, null, new { @class = "form-property-val" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LocaleSubTypes, new { @class = "form-label" })
                @Html.DropDownListFor(model => model.LocaleSubTypeId, Model.LocaleSubTypes, "--Select Sub Type--", new { @class = "form-control form-input" })
                @Html.ValidationMessageFor(model => model.LocaleSubTypeId, null, new { @class = "form-property-val" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TouchPointGroupId, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.TouchPointGroupId, new { @class = "form-control form-input" })
                @Html.ValidationMessageFor(model => model.TouchPointGroupId, null, new { @class = "form-property-val" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VenueOccupant, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.VenueOccupant, new { @class = "form-control form-input" })
                @Html.ValidationMessageFor(model => model.VenueOccupant, null, new { @class = "form-property-val" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VenueCode, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.VenueCode, new { @class = "form-control form-input" })
                @Html.ValidationMessageFor(model => model.VenueCode, null, new { @class = "form-property-val" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OpenDate, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.OpenDate, new { @id = "datepicker", @class = "form-control form-input" })
                @Html.ValidationMessageFor(model => model.OpenDate, null, new { @class = "form-property-val" })
            </div>

        </fieldset>

        <div class="form-group">
            <input type="submit" id="create-button" value="Create" class="btn btn-light form-submit" />
        </div>

        <div class="validation-section page-subsection">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <strong>@TempData["ErrorMessage"].ToString()</strong>
                </div>
            }
        </div>
        <div class="validation-section page-subsection">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <strong>@TempData["SuccessMessage"].ToString()</strong>
                </div>
            }
        </div>

    }
</div>

<div class="form-footer">
    @Html.ActionLink("Back to Locale Management", "Index", "Store")
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/apply-datepicker.js")
}